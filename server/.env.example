# Database
DATABASE_URL="postgresql://username:password@localhost:5432/the_beans_db"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# URLs
CLIENT_URL="http://localhost:3000"                 # Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"               # Frontend URL (for email links)
API_URL="http://localhost:5000"                    # Backend API URL (for Swagger docs)
CORS_ORIGIN="http://localhost:3000"                # Allowed CORS origins (comma-separated for multiple)

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# Email Configuration (for notifications and contact form)
CONTACT_US_EMAIL="your_contact_email@example.com"  # Email address that receives Contact Us form submissions
ADMIN_EMAIL="admin@example.com"                    # Admin email for system notifications
SMTP_HOST="smtp.gmail.com"                         # SMTP server hostname (e.g., smtp.gmail.com, smtp.fastmail.com)
SMTP_PORT=587                                       # SMTP server port (587 for TLS, 465 for SSL)
SMTP_USER="your_email@gmail.com"                   # SMTP authentication username (usually your email)
SMTP_PASS="your_app_password"                      # SMTP authentication password (use app-specific password)

# WebDAV Configuration (for database backups)
WEBDAV_URL="https://webdav.example.com"            # WebDAV server URL
WEBDAV_USER="your_webdav_username"                 # WebDAV username
WEBDAV_PASS="your_webdav_password"                 # WebDAV password

# Environment
NODE_ENV="development"

# Port
PORT=5000
